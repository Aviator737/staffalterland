<!DOCTYPE html>
<html>
<head>
  <title>Staffrails</title>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= stylesheet_link_tag "https://fonts.googleapis.com/icon?family=Material+Icons" %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= stylesheet_link_tag "dashstyle.css" %>
</head>

<body>
<div class="mdl-layout mdl-js-layout mdl-layout--fixed-drawer mdl-layout--fixed-header">
  <header class="mdl-layout__header mdl-color--white mdl-color--grey-100 mdl-color-text--grey-600 is-casting-shadow">
    <div class="mdl-layout__header-row">
      <div class="mdl-layout-spacer"></div>
      <div class="mdl-textfield mdl-js-textfield mdl-textfield--expandable mdl-textfield--floating-label mdl-textfield--align-right">
        <label class="mdl-button mdl-js-button mdl-button--icon" for="fixed-header-drawer-exp">
          <i class="material-icons">search</i>
        </label>
        <div class="mdl-textfield__expandable-holder">
          <input class="mdl-textfield__input" type="text" name="sample" id="fixed-header-drawer-exp">
        </div>
      </div>
    </div>
  </header>
  <div class="mdl-layout__drawer mdl-color--grey-900">
    <header class="mdl-color--blue-grey-900 mdl-color-text--blue-grey-50 mdl-shadow--2dp">
      <div class="brand-logo mdl-color--grey-900 mdl-shadow--2dp"><div class="logo-header">ALTERLAND</div></div>
      <div class="personal-info">
        <div class="mdl-grid">
          <div class="mdl-cell mdl-cell--4-col">
            <%= image_tag(current_account.avatar, {class: "demo-avatar img-responsive"}) if current_account.avatar?%>
          </div>
          <div class="mdl-cell mdl-cell--8-col">
            <h4 class="mdl-color-text--white"><%= current_account.login %></h4>
            <div class="mdl-color-text--blue-grey-400 f12"><i class="material-icons f12">&#xE7EF;</i> <%= group %></div>
          </div>
        </div>
        <div class="demo-avatar-dropdown">
          <span><%= current_account.email %></span>
          <div class="mdl-layout-spacer"></div>
          <button id="account-menu-lower-left" class="mdl-button mdl-js-button mdl-button--icon">
            <i class="material-icons f18">&#xE8B8;</i>
          </button>
          <ul class="mdl-menu mdl-menu--bottom-right mdl-js-menu mdl-js-ripple-effect" for="account-menu-lower-left">
            <li><%= link_to 'Настройки', edit_account_registration_path , :class => "mdl-menu__item mdl-menu__item--full-bleed-divider" %></li>
            <li><%= link_to 'Выход', destroy_account_session_path , method: :delete , :class => "mdl-menu__item" %></li>
          </ul>
        </div>
      </div>
    </header>
    <nav class="mdl-navigation">

      <%= link_to main_index_path, class: "mdl-navigation__link" do %>
          <i class="material-icons">&#xE88A;</i> Главная
      <% end %>

      <%= link_to task_index_path, class: "mdl-navigation__link" do %>
          <i class="material-icons">&#xE7FD;</i> Все задания
      <% end %>
    </nav>
  </div>
  <main class="mdl-layout__content mdl-color--grey-100">
    <div class="page-content">
      <%= yield %>
    </div>
  </main>
</div>
<script>
    function toggle(showHideDiv, switchTextDiv) {
        var ele = document.getElementById(showHideDiv);
        var text = document.getElementById(switchTextDiv);
        if(ele.style.display == "block") {
            ele.style.display = "none";
        }
        else {
            ele.style.display = "block";
        }
    }
</script>
</body>
</html>